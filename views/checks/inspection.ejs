<%- include('../partials/header') %>

<div class="max-w-3xl mx-auto">
    <a href="/dashboard" class="text-gray-500 hover:text-indigo-600 mb-6 inline-block">
        <i class="fas fa-arrow-left mr-1"></i> Назад към таблото
    </a>

    <div class="bg-white p-6 rounded-xl shadow-sm border border-gray-100 mb-6 flex justify-between items-center">
        <div>
            <h1 class="text-2xl font-bold text-gray-900">Технически Преглед (ГТП)</h1>
            <p class="text-gray-500">Справка в ИА "Автомобилна администрация"</p>
        </div>
        <div class="text-right bg-gray-50 p-3 rounded-lg">
            <div class="text-sm text-gray-500">Автомобил</div>
            <div class="font-bold text-gray-800"><%= car.brand %> <%= car.model %></div>
            <div class="font-mono text-indigo-600"><%= car.regPlate %></div>
        </div>
    </div>

    <div class="bg-white p-8 rounded-xl shadow-lg border border-gray-100">

        <% if (error) { %>
            <div class="bg-red-50 border-l-4 border-red-500 p-4 mb-6">
                <div class="flex">
                    <div class="flex-shrink-0"><i class="fas fa-exclamation-circle text-red-500"></i></div>
                    <div class="ml-3"><p class="text-sm text-red-700 font-bold"><%= error %></p></div>
                </div>
                <div class="mt-4">
                    <a href="/check/inspection/<%= car._id %>" class="text-sm font-medium text-red-700 hover:text-red-600 underline">
                        Опитайте отново (Презареждане)
                    </a>
                </div>
            </div>
        <% } %>

        <% if (result) { %>
            <div class="text-center py-6">
                <% if (result.success) { %>
                    <div class="mx-auto flex items-center justify-center h-16 w-16 rounded-full bg-green-100 mb-4">
                        <i class="fas fa-check text-green-600 text-2xl"></i>
                    </div>
                    <h3 class="text-lg font-medium text-gray-900">Успешна проверка</h3>
                <% } else { %>
                    <div class="mx-auto flex items-center justify-center h-16 w-16 rounded-full bg-orange-100 mb-4">
                        <i class="fas fa-times text-orange-600 text-2xl"></i>
                    </div>
                    <h3 class="text-lg font-medium text-gray-900">Проблем с прегледа</h3>
                <% } %>
                
                <div class="mt-4 text-left bg-gray-50 p-6 rounded-lg text-gray-800 border border-gray-200">
                    <p class="text-lg leading-relaxed">
                        <%- result.text %>
                    </p>
                </div>

                <div class="mt-8">
                    <a href="/dashboard" class="inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none">
                        Обратно в гаража
                    </a>
                </div>
            </div>

        <% } else if (captchaImage) { %>
            
            <form action="/check/inspection/<%= car._id %>" method="POST" class="max-w-md mx-auto">
                
                <div class="mb-6">
                    <label class="block text-sm font-medium text-gray-700 mb-2">Регистрационен номер</label>
                    <input type="text" value="<%= car.regPlate %>" disabled 
                           class="w-full px-4 py-2 border border-gray-300 rounded-lg bg-gray-100 text-gray-500 cursor-not-allowed">
                    <p class="text-xs text-gray-400 mt-1">Номерът се попълва автоматично от вашия профил.</p>
                </div>

                <div class="mb-6">
                    <label class="block text-sm font-medium text-gray-700 mb-2">Код за сигурност (Captcha)</label>
                    
                    <div class="flex items-center space-x-4 mb-3">
                        <div class="border p-1 rounded bg-white shadow-sm">
                            <img src="<%= captchaImage %>" alt="Captcha" class="h-12">
                        </div>
                        <span class="text-sm text-gray-500">Въведете символите от картинката</span>
                    </div>

                    <input type="text" name="captchaCode" required placeholder="Въведете 4-те символа" autocomplete="off"
                           class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-indigo-500 focus:outline-none text-lg tracking-widest uppercase">
                </div>

                <button type="submit" onclick="this.innerHTML='<i class=\'fas fa-circle-notch fa-spin mr-2\'></i> Проверка...'; this.disabled=true; this.form.submit();"
                        class="w-full flex justify-center py-3 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 transition">
                    Провери статус
                </button>
            </form>

        <% } %>
    </div>
</div>

<%- include('../partials/footer') %>