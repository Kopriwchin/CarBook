<%- include('../partials/header') %>

<div class="max-w-4xl mx-auto px-4 py-8">
    <a href="/shop" class="text-gray-500 hover:text-indigo-600 mb-6 inline-block">
        <i class="fas fa-arrow-left mr-1"></i> Назад към магазина
    </a>

    <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        <div class="md:col-span-2">
            <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-6">
                <h2 class="text-xl font-bold text-gray-900 mb-6">Детайли за плащане</h2>

                <form action="/pay" method="POST">
                    <input type="hidden" name="productId" value="<%= product.id %>">
                    
                    <div class="mb-5">
                        <label class="block text-sm font-medium text-gray-700 mb-2">Номер на карта</label>
                        <div class="relative">
                            <input type="text" name="cardNumber" placeholder="0000 0000 0000 0000" maxlength="19"
                                   value="<%= formData.cardNumber || '' %>"
                                   class="block w-full pl-10 pr-3 py-3 border <%= errors.cardNumber ? 'border-red-500 bg-red-50' : 'border-gray-300' %> rounded-lg focus:ring-indigo-500 focus:border-indigo-500 transition">
                            <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                                <i class="far fa-credit-card text-gray-400"></i>
                            </div>
                        </div>
                        <% if (errors.cardNumber) { %>
                            <p class="text-red-600 text-xs mt-1 font-bold"><i class="fas fa-exclamation-circle"></i> <%= errors.cardNumber %></p>
                        <% } %>
                    </div>

                    <div class="grid grid-cols-2 gap-6 mb-5">
                        <div>
                            <label class="block text-sm font-medium text-gray-700 mb-2">Валидна до (MM/YY)</label>
                            <input type="text" name="expiry" placeholder="MM/YY" maxlength="5"
                                   value="<%= formData.expiry || '' %>"
                                   class="block w-full px-3 py-3 border <%= errors.expiry ? 'border-red-500 bg-red-50' : 'border-gray-300' %> rounded-lg focus:ring-indigo-500 focus:border-indigo-500 transition">
                            <% if (errors.expiry) { %>
                                <p class="text-red-600 text-xs mt-1 font-bold"><%= errors.expiry %></p>
                            <% } %>
                        </div>
                        <div>
                            <label class="block text-sm font-medium text-gray-700 mb-2">CVV / CVC</label>
                            <input type="text" name="cvv" placeholder="123" maxlength="3"
                                   value="<%= formData.cvv || '' %>"
                                   class="block w-full px-3 py-3 border <%= errors.cvv ? 'border-red-500 bg-red-50' : 'border-gray-300' %> rounded-lg focus:ring-indigo-500 focus:border-indigo-500 transition">
                            <% if (errors.cvv) { %>
                                <p class="text-red-600 text-xs mt-1 font-bold"><%= errors.cvv %></p>
                            <% } %>
                        </div>
                    </div>

                    <div class="mb-6">
                        <label class="block text-sm font-medium text-gray-700 mb-2">Име върху картата</label>
                        <input type="text" name="cardHolder" placeholder="IVAN IVANOV"
                               value="<%= formData.cardHolder || '' %>"
                               class="block w-full px-3 py-3 border <%= errors.cardHolder ? 'border-red-500 bg-red-50' : 'border-gray-300' %> rounded-lg focus:ring-indigo-500 focus:border-indigo-500 transition">
                        <% if (errors.cardHolder) { %>
                            <p class="text-red-600 text-xs mt-1 font-bold"><%= errors.cardHolder %></p>
                        <% } %>
                    </div>

                    <button type="submit" class="w-full bg-indigo-600 text-white py-3 rounded-lg font-bold hover:bg-indigo-700 transition flex justify-center items-center shadow-md">
                        <i class="fas fa-lock mr-2"></i> Плати <%= product.price.toFixed(2) %> лв.
                    </button>
                </form>
            </div>
        </div>

        <div class="md:col-span-1">
            <div class="bg-gray-50 rounded-xl p-6 border border-gray-200 sticky top-4">
                <h3 class="text-lg font-bold text-gray-900 mb-4">Вашата поръчка</h3>
                
                <div class="flex justify-between items-start mb-4 pb-4 border-b border-gray-200">
                    <div>
                        <div class="font-medium text-gray-900"><%= product.name %></div>
                        <div class="text-sm text-gray-500">Лиценз за <%= product.slots %> кола</div>
                    </div>
                    <div class="font-bold"><%= product.price.toFixed(2) %> лв.</div>
                </div>

                <div class="flex justify-between items-center pt-2">
                    <span class="text-lg font-bold text-gray-900">Общо</span>
                    <span class="text-2xl font-bold text-indigo-600"><%= product.price.toFixed(2) %> лв.</span>
                </div>
            </div>
        </div>
    </div>
</div>

<%- include('../partials/footer') %>