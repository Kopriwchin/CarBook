<%- include('partials/header') %>

<div class="mb-8 flex flex-col md:flex-row justify-between items-center">
    <div>
        <h1 class="text-3xl font-bold text-gray-900">Моят Гараж</h1>
        <p class="text-gray-500 mt-1">Управлявайте автомобилите и правете справки.</p>
        
        <div class="mt-3 inline-flex items-center bg-blue-50 px-3 py-1 rounded-full text-sm font-medium text-blue-700 border border-blue-100">
            <i class="fas fa-parking mr-2"></i>
            Заети слотове: <%= usedSlots %> / <%= totalSlots %>
            
            <% if (usedSlots >= totalSlots) { %>
                <span class="ml-2 text-red-600 text-xs font-bold">(ПЪЛЕН)</span>
            <% } %>
        </div>
    </div>
    
    <% if (usedSlots < totalSlots) { %>
        <a href="/add-vehicle" class="mt-4 md:mt-0 bg-indigo-600 text-white px-5 py-2.5 rounded-lg shadow hover:bg-indigo-700 transition flex items-center">
            <i class="fas fa-plus mr-2"></i> Добави кола
        </a>
    <% } else { %>
        <a href="/shop" class="mt-4 md:mt-0 bg-orange-500 text-white px-5 py-2.5 rounded-lg shadow hover:bg-orange-600 transition flex items-center animate-pulse">
            <i class="fas fa-shopping-cart mr-2"></i> Купи още слотове
        </a>
    <% } %>
</div>

<% if (vehicles.length === 0) { %>
    <div class="text-center py-20 bg-white rounded-xl shadow-sm border border-dashed border-gray-300">
       <p class="text-gray-500">Нямате автомобили в гаража.</p>
    </div>
<% } else { %>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        <% vehicles.forEach(car => { %>
            <div class="bg-white rounded-xl shadow-sm hover:shadow-md transition border border-gray-100 overflow-visible relative group">
                
                <form action="/delete-vehicle/<%= car._id %>" method="POST" onsubmit="return confirm('Сигурни ли сте, че искате да премахнете този автомобил?');" class="absolute top-4 right-4 z-10">
                    <button type="submit" class="text-gray-300 hover:text-red-500 transition p-1" title="Изтрий автомобила">
                        <i class="fas fa-trash-alt"></i>
                    </button>
                </form>

                <div class="p-5 border-b border-gray-50 flex justify-between items-start bg-gray-50 rounded-t-xl">
                    <div>
                        <h3 class="font-bold text-lg text-gray-800"><%= car.brand %> <%= car.model %></h3>
                        <span class="text-xs font-mono bg-gray-200 text-gray-700 px-2 py-1 rounded mt-1 inline-block">
                            <%= car.regPlate %>
                        </span>
                    </div>
                    <div class="text-gray-400 mt-8"> <i class="fas fa-car-side fa-lg"></i>
                    </div>
                </div>

                <div class="p-5 space-y-3 pb-20">
                     <div class="pt-4 mt-2 border-t relative">
                        <button onclick="toggleMenu('<%= car._id %>')" class="w-full flex justify-between items-center bg-indigo-50 text-indigo-700 px-4 py-2 rounded-lg font-medium hover:bg-indigo-100 transition">
                            <span>Избери Проверка</span>
                            <i class="fas fa-chevron-down text-xs"></i>
                        </button>
                        <div id="menu-<%= car._id %>" class="hidden absolute left-0 right-0 mt-2 bg-white rounded-lg shadow-xl border border-gray-100 z-10 overflow-hidden">
                             <a href="/check/insurance/<%= car._id %>" class="block px-4 py-3 text-sm hover:bg-gray-50">Гражданска</a>
                             <a href="/check/inspection/<%= car._id %>" class="block px-4 py-3 text-sm hover:bg-gray-50">ГТП</a>
                             <a href="/check/vignette/<%= car._id %>" class="block px-4 py-3 text-sm hover:bg-gray-50">Винетка</a>
                             <a href="/check/fines/<%= car._id %>" class="block px-4 py-3 text-sm hover:bg-gray-50 hover:text-red-600">Глоби</a>
                        </div>
                     </div>
                </div>
            </div>
        <% }) %>
    </div>
<% } %>

<script>
    function toggleMenu(id) { document.getElementById('menu-'+id).classList.toggle('hidden'); }
</script>

<%- include('partials/footer') %>