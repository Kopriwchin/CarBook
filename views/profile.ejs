<%- include('partials/header') %>

<div class="max-w-2xl mx-auto mt-10">
    <div class="bg-white shadow-lg rounded-lg border border-gray-200 overflow-hidden">
        
        <div class="bg-gray-50 px-6 py-4 border-b border-gray-200 flex justify-between items-center">
            <h2 class="text-xl font-bold text-gray-800">Моят Профил</h2>
            <i class="fas fa-user-circle text-4xl text-gray-400"></i>
        </div>

        <div class="p-6">
            <% if (message) { %>
                <% if (typeof error !== 'undefined' && error) { %>
                    <div class="bg-red-50 text-red-700 p-3 rounded mb-4 text-sm border border-red-200 flex items-center">
                        <i class="fas fa-exclamation-circle mr-2 text-lg"></i> 
                        <span><%= message %></span>
                    </div>
                <% } else { %>
                    <div class="bg-green-50 text-green-700 p-3 rounded mb-4 text-sm border border-green-200 flex items-center">
                        <i class="fas fa-check-circle mr-2 text-lg"></i> 
                        <span><%= message %></span>
                    </div>
                <% } %>
            <% } %>

            <form action="/profile" method="POST" class="space-y-6">
                
                <div>
                    <label class="block text-sm font-medium text-gray-500 mb-1">Имейл адрес</label>
                    <input type="text" value="<%= user.email %>" disabled
                           class="w-full px-4 py-2 border border-gray-200 rounded-lg bg-gray-100 text-gray-500 cursor-not-allowed">
                    <p class="text-xs text-gray-400 mt-1">Имейл адресът не може да бъде променян.</p>
                </div>

                <div>
                    <label for="sumps" class="block text-sm font-medium text-gray-700 mb-1">Номер на СУМПС (Шофьорска книжка)</label>
                    <div class="relative rounded-md shadow-sm">
                        <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                            <i class="fas fa-id-card text-gray-400"></i>
                        </div>
                        <input type="text" name="sumps" id="sumps" 
                               value="<%= user.sumps %>" 
                               placeholder="Въведете номер..."
                               class="focus:ring-indigo-500 focus:border-indigo-500 block w-full pl-10 sm:text-sm border-gray-300 rounded-md py-2 border">
                    </div>
                </div>

                <div class="mt-6">
                    <label for="egn" class="block text-sm font-medium text-gray-700 mb-1">ЕГН (Единен граждански номер)</label>
                    <div class="relative rounded-md shadow-sm">
                        <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                            <i class="fas fa-fingerprint text-gray-400"></i>
                        </div>
                        <input type="text" name="egn" id="egn" 
                            value="<%= user.egn %>" 
                            maxlength="10"
                            placeholder="Въведете ЕГН..."
                            class="focus:ring-indigo-500 focus:border-indigo-500 block w-full pl-10 sm:text-sm border-gray-300 rounded-md py-2 border">
                    </div>
                    <p class="text-xs text-gray-400 mt-1">Необходимо за справки за глоби и задължения.</p>
                </div>

                <div class="flex justify-end pt-4">
                    <button type="submit" class="bg-indigo-600 text-white px-6 py-2 rounded-md hover:bg-indigo-700 transition shadow-sm font-medium">
                        Запази промените
                    </button>
                </div>

            </form>
        </div>
    </div>
</div>

<%- include('partials/footer') %>